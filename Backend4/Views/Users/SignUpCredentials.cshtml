@model UserCredential

@{
    ViewData["Title"] = "SignUpCredentials";
}

<h2>Sign Up Credentials</h2>

<form class="form-horizontal" asp-action="SignUpCredentials">

    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="Day" />
    <input type="hidden" asp-for="Month" />
    <input type="hidden" asp-for="Year" />
    <input type="hidden" asp-for="Gender" />
    <input type="hidden" asp-for="UserExist" value="@Model.UserExist" />

    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Email"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="Password"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="ConfirmPassword"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" asp-for="RememberMe"></label>
        <div class="col-md-10">
            <input class="form-inline" asp-for="RememberMe" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input class="btn btn-primary" type="submit" value="Send" />
        </div>
    </div>

</form>
